<?php //The table ?>
<div class="container"> 
<table class="table table-striped">
<?php
  if(!empty($input)) {
    $arr = explode("\n", $input);
    $rows = 0;
    $age = 0;      
    $grade = 0;
    foreach($arr as $line) {
      $rows = $rows+1;                
      echo "<tr>";
      if($rows != 1){
        $real_row_number = $rows -1;
        echo "<td>$real_row_number</td>";
      } else {
        echo "<td>#</td>";  
      }
    $col = 0;
    $item = explode(",", $line);
      foreach($item as $each) {
        $col = $col+1;
          if($col == 2){
            $age = $age+(int)$each;
          }
          if($col == 5){
            $grade = $grade+(int)$each;
          }
    echo "<td>$each</td>";
      }
    echo "</tr>";
    }
  }
?>
</table>
</div>
<?php //Calculations(like average age) ?>
<?php 
  if(!empty($file)){
?>
<div class = "container">
